{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "prisma/schema.prisma"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}